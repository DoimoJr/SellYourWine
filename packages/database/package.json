{
  "name": "@wine-marketplace/database",
  "version": "0.1.0",
  "description": "Database package with Prisma for wine marketplace",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "lint": "echo 'Lint skipped - using TypeScript for validation'",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@wine-marketplace/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "prisma": "^5.7.1",
    "tsx": "^4.20.5",
    "typescript": "^5.1.3"
  }
}